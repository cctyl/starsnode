<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 接口标题行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 接口类型图标 -->
            <ImageView
                android:id="@+id/interfaceIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_network_white"
                android:background="@drawable/gradient_stat_online"
                android:padding="4dp" />

            <!-- 接口名称和状态 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/interfaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eth0"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/interfaceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有线网络"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- 流量统计 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/trafficStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓0.1MB ↑0.05MB"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/interfaceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活跃"
                    android:textColor="@color/status_online"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 展开/收起按钮 -->
            <ImageView
                android:id="@+id/expandButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_expand_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- 详细信息（默认隐藏） -->
        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- IPv4 地址信息 -->
            <LinearLayout
                android:id="@+id/ipv4Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPv4 地址"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/ipv4Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="192.168.1.100"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="掩码："
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/ipv4Netmask"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="255.255.255.0"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="MAC："
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/macAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="aa:bb:cc:dd:ee:ff"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

            <!-- IPv6 地址信息（如果有） -->
            <LinearLayout
                android:id="@+id/ipv6Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPv6 地址"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/ipv6Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="fe80::xxxx"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>